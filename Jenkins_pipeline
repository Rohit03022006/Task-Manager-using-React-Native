pipeline {
    agent any 
    
    stages {
        stage('Code') {
            steps {
                echo 'Cloning GitHub repoâ€¦'
                git branch: 'main',
                    url: 'https://github.com/Rohit03022006/Task-Manager-using-React-Native.git'
            }
        }
        
        stage('Build and Test') {
            steps {
                echo 'Building Docker image...'
                sh 'DOCKER_BUILDKIT=1 docker build -t rohitxten/task-manager:latest .'
            }
        }
        
        stage('Push') {
            steps {
                echo 'Pushing the Docker image to DockerHub'
                withCredentials([usernamePassword(
                    credentialsId: 'DockerHubCredential',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh '''
                        echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                        docker push rohitxten/task-manager:latest
                    '''
                }
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                sh '''
                    docker compose down || true 
                    docker compose up 
                '''
            }
        }
    }         

    post {
        failure {
            echo 'Pipeline failed! Check logs for errors.'
        }
        success {
            echo 'Pipeline succeeded! Image pushed and app deployed.'
        }
    }
}